{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "cwd": "${workspaceFolder}/",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--experimental-vm-modules"],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--runInBand"],
      "console": "integratedTerminal",
      "disableOptimisticBPs": true,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Single Jest Test (current file)",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--experimental-vm-modules"],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["${fileBasename}", "-c", "${workspaceFolder}/jest.config.js", "--runInBand"],
      "console": "integratedTerminal",
      "disableOptimisticBPs": true,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Test by Name",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--experimental-vm-modules"],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "${fileBasename}",
        "-c",
        "${workspaceFolder}/jest.config.js",
        "-t",
        "${input:testName}",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "disableOptimisticBPs": true,
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Enter test name (or part of it)",
      "default": ""
    }
  ]
}
